pkgname=flemozi-bin
pkgver=%{{VERSION}}%
pkgrel=%{{PKGREL}}%
epoch=
pkgdesc="Advanced‚ö° Emoji PickerüòÄ for Linuxüêß, Windowsü™ü and macOSüçé"
arch=(x86_64)
url="https://github.com/KRTirtho/flemozi/"
license=('GPLv3')
groups=()
